{
  "name": "@heroku/salesforce-sdk-nodejs",
  "version": "0.3.4-ea",
  "description": "Salesforce SDK for Heroku Apps.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "lint": "eslint . --ext .ts --max-warnings 0 --report-unused-disable-directives --format codeframe",
    "lint:fix": "npm run lint -- --fix",
    "wiremock": "wiremock --port 8080 --bind-address 127.0.0.1 --disable-banner",
    "mocha": "mocha",
    "test": "TS_NODE_PROJECT=tsconfig.test.json concurrently -k -s first \"wiremock\" \"mocha\"",
    "format": "npm run format:write && npm run format:check",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "prepack": "tsc -b --clean && tsc -b --force",
    "bump": "node bin/bump-version.js",
    "release": "bin/publish.sh",
    "docs": "typedoc"
  },
  "files": [
    "package.json",
    "npm-shrinkwrap.json",
    "README.md",
    "LICENSE.txt",
    "CHANGELOG.md",
    "SECURITY.md",
    "TERMS_OF_USE.md",
    "dist"
  ],
  "author": "heroku",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@salesforce/core": "^8.3.0",
    "csv-parse": "^5.3.3",
    "csv-stringify": "^6.2.3",
    "jsforce": "^2.0.0-beta.24",
    "luxon": "^3.2.1",
    "node-fetch": "^2.7.0",
    "semver": "^7.6.2",
    "throng": "^5.0.0",
    "whatwg-mimetype": "^3.0.0"
  },
  "devDependencies": {
    "@salesforce/ts-sinon": "^1.4.19",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.7.10",
    "@types/semver": "^7.5.8",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^4.4.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-license-header": "^0.6.1",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "sinon": "^18.0.0",
    "ts-node": "^10.9.2",
    "ts-pattern": "^4.1.3",
    "typedoc": "^0.26.10",
    "typedoc-plugin-markdown": "^4.2.9",
    "typescript": "^5.5.4",
    "wiremock": "^3.5.4"
  },
  "overrides": {
    "minimist": "1.2.6",
    "xml2js": "0.5.0",
    "tough-cookie": "4.1.4"
  },
  "optionalDependencies": {
    "fsevents": "*"
  },
  "directories": {
    "test": "test"
  },
  "keywords": [
    "Heroku",
    "Salesforce"
  ]
}
